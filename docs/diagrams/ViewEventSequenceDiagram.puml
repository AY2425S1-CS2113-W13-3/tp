@startuml
!include style.puml
hide footbox

participant ":Main" as main
participant ":ViewCommand" as command COMMAND_COLOUR
participant ":EventList" as eventList EVENT_COLOUR

main -> command : execute()
activate command COMMAND_COLOUR

command -> eventList : getEventByName(eventName)
activate eventList EVENT_COLOUR

return eventToView : Event

alt eventToView not found
    command --> main : Invalid event
else isViewingParticipants is true
    ref over command, eventList: view participants
else else
    ref over command, eventList: view items
end

return

@enduml
